<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.systemservice_broadcastreceiver_example.MainActivity"
		>

		<EditText
				android:id="@+id/text_main_timeout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:hint="Input timeout"
				android:inputType="numberDecimal"
				android:maxLines="1"
				android:textAlignment="center"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				/>
		<Button
				android:id="@+id/btn_main_fire"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Fire event"
				app:layout_constraintLeft_toLeftOf="@id/text_main_timeout"
				app:layout_constraintRight_toRightOf="@id/text_main_timeout"
				app:layout_constraintTop_toBottomOf="@id/text_main_timeout"
				/>

</android.support.constraint.ConstraintLayout>
