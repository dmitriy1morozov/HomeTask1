<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmitriymorozov.hometask1.MainActivity">

    <ImageView
        android:id="@+id/image_main_slide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_main_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_main_slideshow"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@android:drawable/ic_media_previous"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_main_slideshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_main_previous"
        app:layout_constraintRight_toLeftOf="@id/btn_main_next"
        android:background="@android:drawable/ic_media_play"
        android:backgroundTint="@color/colorPrimary"
        />


    <Button
        android:id="@+id/btn_main_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_main_slideshow"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:drawable/ic_media_next"
        android:backgroundTint="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>
